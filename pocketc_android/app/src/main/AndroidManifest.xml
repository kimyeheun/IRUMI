<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 추후 실제 서버 연동을 위해 미리 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Irumi">
        <!-- SplashActivity: 앱 실행 시 가장 먼저 실행되는 런처 -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Irumi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- IntroActivity: 스플래시 이후 진입 화면 -->
        <!-- 외부에서 직접 진입할 필요가 없으므로 exported=false 권장 -->
        <activity
            android:name=".ui.intro.IntroActivity"
            android:exported="false" />

        <!-- RegisterActivity: 회원가입 화면 (Intro → 시작하기) -->
        <activity
            android:name=".ui.auth.register.RegisterActivity"
            android:exported="false" />

        <!-- LoginActivity: 로그인 화면 (Intro 하단 텍스트 버튼) -->
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:exported="false" />

        <!-- MainActivity: 로그인/회원가입 성공 시 이동할 메인 -->
        <!-- 현재 소스 트리 기준 경로는 ui 패키지 아래이므로 .ui.MainActivity 로 지정 -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Irumi" />

    </application>

</manifest>